  <h1>ðŸ§© Prediksi Lawan Magic Chess Gogo</h1>
  <p>Masukkan nama 8 pemain (Player1 = kamu):</p>
  <div id="inputs"></div>
  <button onclick="generate()">Buat Tabel Prediksi</button>
  <div id="result"></div>

<script>
function generate() {
  const players = [];
  for (let i = 1; i <= 8; i++) {
    players.push(document.getElementById("p" + i).value || "Player" + i);
  }

  let html = "<table><tr><th>Round</th><th>Lawan " + players[0] + "</th></tr>";
  for (let round = 1; round <= 20; round++) {
    if (round === 1) {
      html += `<tr><td>${round}</td><td>Creep</td></tr>`;
    } else {
      let idx = (round - 2) % (players.length - 1) + 1;
      html += `<tr><td>${round}</td><td>${players[idx]}</td></tr>`;
    }
  }
  html += "</table>";
  document.getElementById("result").innerHTML = html;
}

window.onload = function() {
  let inputs = "";
  for (let i = 1; i <= 8; i++) {
    inputs += `<input type='text' id='p${i}' placeholder='Player${i}'>`;
  }
  document.getElementById("inputs").innerHTML = inputs;
}
</script>
</body>
